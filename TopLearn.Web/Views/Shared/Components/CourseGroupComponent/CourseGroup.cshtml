@model IEnumerable<TopLearn.DataLayer.Entities.Course.CourseGroup>

<div class="main-menu">
    <div class="container">
        <nav>
            <span class="responsive-sign"><i class="zmdi zmdi-menu"></i></span>
            <ul>
                @foreach (var item in Model.Where(x => x.ParentId == null))
                {
                    <li>
                        <a href="">@item.GroupTitle</a>
                        @if (Model.Any(x => x.ParentId == item.GroupId))
                        {
                            <ul>
                                @foreach (var item2 in Model.Where(x => x.ParentId == item.GroupId))
                                {
                                    <li>
                                        <a href="">@item2.GroupTitle</a>
                                    </li>
                                }
                            </ul>
                        }
                    </li>
                }
            </ul>
        </nav>
    </div>
</div>