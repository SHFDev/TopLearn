@page
@using TopLearn.Core.Convertors
@model TopLearn.Web.Pages.Admin.Roles.IndexModel
@{
    ViewData["Title"] = "لیست نقش ها";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">لیست کاربران</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                لیست نقش های سایت
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                            <div class="col-md-12" style="margin: 10px 0;">

                            <a href="Roles/CreateRole" class="btn btn-outline btn-success">افزودن نقش جدید</a>

                        </div>
                        <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                            <thead>
                                <tr>
                                    <th>عنوان</th>
                                    <th>دستورات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var role in Model.RoleList)
                                {
                                    <tr>
                                        <td>@role.RoleTitle</td>
                                        <td>
                                            <a href="Roles/EditRole/@role.RoleId" class="btn btn-warning btn-sm">
                                                ویرایش
                                            </a>
                                            <a href="Roles/DeleteRole/@role.RoleId" class="btn btn-danger btn-sm">
                                                حذف
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table><div class="row">
                   
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>